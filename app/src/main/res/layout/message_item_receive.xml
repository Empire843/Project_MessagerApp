<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!--    <ImageView-->
    <!--        android:id="@+id/profile_image"-->
    <!--        android:layout_width="48dp"-->
    <!--        android:layout_height="48dp"-->
    <!--        android:src="@drawable/ic_user" />-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_receiver"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_user" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/message_image_receive"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:maxWidth="300dp"
            android:maxHeight="400dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/message_text_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_box_messag_receive"
            android:text="Hello, how are you?"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/message_time_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="2:30 PM"
            android:textColor="@color/gray"
            android:textSize="10sp" />

    </LinearLayout>

    <!--    <ImageView-->
    <!--        android:id="@+id/message_status"-->
    <!--        android:layout_width="24dp"-->
    <!--        android:layout_height="24dp"-->
    <!--        android:src="@drawable/ic_check" />-->

</LinearLayout>
