<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!--    <ImageView-->
    <!--        android:id="@+id/message_status"-->
    <!--        android:layout_width="24dp"-->
    <!--        android:layout_height="24dp"-->
    <!--        android:src="@drawable/ic_check" />-->


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/message_image_send"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:maxWidth="300dp"
            android:maxHeight="400dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/message_text_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_box_message"
            android:text="Hello, how are you?dddddddddddddddddddÄ‘eeeeeeeeeeeeeeetttt"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/message_time_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:30 PM"
            android:textColor="@color/gray"
            android:textSize="10sp" />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_sender"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_user" />
</LinearLayout>
